# 简化的单阶段构建用于测试
FROM golang:1.24-alpine AS builder

# 安装构建依赖（使用HTTP镜像源避免证书问题）
RUN echo "==> Installing build dependencies..." && \
    apk add --no-cache --allow-untrusted --repository http://dl-cdn.alpinelinux.org/alpine/v3.20/main --repository http://dl-cdn.alpinelinux.org/alpine/v3.20/community ca-certificates git && \
    update-ca-certificates && \
    echo "==> Build dependencies installed"

# 设置工作目录
WORKDIR /build

# 复制go mod文件
COPY go.mod go.sum ./

# 下载依赖（显示进度），使用国内镜像并禁用checksum验证避免证书问题
RUN echo "==> Downloading Go dependencies..." && \
    GOPROXY=https://goproxy.cn,direct GOSUMDB=off go mod download && \
    echo "==> Dependencies downloaded successfully"

# 复制源代码
COPY . .

# 构建二进制文件（显示进度）
RUN echo "==> Building tunnox-server binary..." && \
    CGO_ENABLED=0 GOOS=linux go build \
    -ldflags="-w -s" \
    -o /build/bin/tunnox-server \
    ./cmd/server && \
    echo "==> Build completed successfully" && \
    ls -lh /build/bin/tunnox-server

# 最终阶段 - 使用更轻量的基础镜像
FROM alpine:3.19

# 安装必要的运行时依赖（使用HTTP源）
RUN echo "==> Installing runtime dependencies..." && \
    apk add --no-cache --allow-untrusted --repository http://dl-cdn.alpinelinux.org/alpine/v3.19/main --repository http://dl-cdn.alpinelinux.org/alpine/v3.19/community ca-certificates wget && \
    echo "==> Runtime dependencies installed"

# 创建应用目录和用户
RUN echo "==> Creating app user and directories..." && \
    addgroup -g 1000 tunnox && \
    adduser -D -u 1000 -G tunnox tunnox && \
    mkdir -p /app/data /app/config && \
    echo "==> User and directories created"

# 设置工作目录
WORKDIR /app

# 从构建阶段复制二进制文件
COPY --from=builder /build/bin/tunnox-server /app/tunnox-server

# 设置权限
RUN chown -R tunnox:tunnox /app && \
    chmod +x /app/tunnox-server

# 切换到非root用户
USER tunnox

# 暴露端口
EXPOSE 7000 7001 7002/udp 7003/udp 8080

# 健康检查（Management API 默认在 9000 端口，使用GET请求）
HEALTHCHECK --interval=10s --timeout=5s --start-period=30s --retries=3 \
    CMD wget -q -O /dev/null http://localhost:9000/health || exit 1

# 运行服务器
ENTRYPOINT ["/app/tunnox-server"]

